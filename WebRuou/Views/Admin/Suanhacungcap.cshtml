@model WebRuou.Models.nhacungcap

@{
    ViewBag.Title = "Suanhacungcap";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin nhà cung cấp</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaNCC)

        <div class="form-group">
            <label class="control-label col-md-2" for="TenTH">Tên nhà cung cấp</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenNCC)
                @Html.ValidationMessageFor(model => model.TenNCC)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Diachi">Địa chỉ:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Diachi)
                @Html.ValidationMessageFor(model => model.Diachi)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="DienThoai">Số điện thoại:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DienThoai)
                @Html.ValidationMessageFor(model => model.DienThoai)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
