@model WebRuou.Models.loai

@{
    ViewBag.Title = "Sualoairuou";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN LOẠI SẢN PHẨM</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Maloai)

        <div class="form-group">
            <label class="control-label col-md-2" for="TenTH">Tên Loại Sản Phẩm</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tenloai)
                @Html.ValidationMessageFor(model => model.Tenloai)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
