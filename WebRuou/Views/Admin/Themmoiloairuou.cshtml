@model WebRuou.Models.loai

@{
    ViewBag.Title = "Themmoiloairuou";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM MỚI LOẠI SP</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label class="control-label col-md-2" for="TenTH">Tên loại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tenloai)
                @Html.ValidationMessageFor(model => model.Tenloai)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm Mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Loairuou")
</div>
